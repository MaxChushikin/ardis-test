{% extends 'admin/admin_content_base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body_nav %}
    <h1>Products</h1>
{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12">


            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="search"
                           value="{{ app.request.query.get('search') }}"
                           class="form-control"
                           placeholder="Search..."
                    >
                    <div class="input-group-append">
                        <button type="submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th width="100px" scope="col">#</th>
                    <th scope="col">Name</th>
                    <th width="200px" scope="col">Price</th>
                    <th width="150px"></th>
                </tr>
                </thead>
                <tbody>
                {% for product in pagination %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}</td>
                        <td>

                            <a href="{{ path('admin_product_edit', {id: product.id}) }}"><button type="button" class="btn btn-primary"><span class="fa fa-edit"></span></button></a>
                            <a href="{{ path('admin_product_remove', {id: product.id}) }}"><button type="button" class="btn btn-danger"><span class="fa fa-trash"></span></button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No products found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}